<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailRuanganActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:text="Nama Ruang: "
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tvDetailNamaRuang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Ruang Di Sni"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="60dp"
            android:text="Lantai: "
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tvDetailLantaiRuang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lantai Di Sini"/>
    </LinearLayout>

    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/phtvDetailJadwalRuang"
        android:paddingTop="100dp"
        android:src="@drawable/logo_polinema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>