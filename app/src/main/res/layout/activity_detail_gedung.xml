<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditGedungActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/grey"
        android:src="@drawable/camera"
        android:id="@+id/detailGambarGedung"
        />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Gedung : "
            android:textSize="18sp"/>
        <EditText
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:hint="Nama Gedung"
            android:textStyle="bold"
            android:textSize="18sp"
            android:id="@+id/detailNamaGedung"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnEditDataGedung"
            android:layout_toEndOf="@+id/btnGantiFotoGedung"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@color/orange"
            android:text="Edit Data"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnGantiFotoGedung"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@color/colorPrimary"
            android:text="Ganti Foto"
            android:textAllCaps="false" />
    </RelativeLayout>

</LinearLayout>